<?xml version='1.0' encoding='utf-8'?>
<widget id="shorty.cmis.tabris" version="0.1.0">
    <name>CMIS Squirrel</name>
    <description>
    Mobile CMIS Client for Browser Binding
  </description>
    <author email="sascha.homeier@gmail.com">
    Sascha Homeier
  </author>
  <access origin="*"></access>
  <preference name="EnableDeveloperConsole" value="$IS_DEBUG"/>
  <preference name="CameraUsesGeolocation" value="false" />
  <plugin name="es6-promise-plugin" spec="^4.1.0" />
  <plugin name="cordova-plugin-camera" spec="^2.4.1">
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Photo Library Access is needed for uploading images" />
  </plugin>
  <plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
  <plugin name="cordova-plugin-file-opener2" spec="^2.0.15" />
   <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-60x60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-60x60@1x.png" width="60" height="60" />
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-60x60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-76x76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-40x40@2x.png" width="80" height="80" />
        <!-- iOS 6.1 -->
        <!-- iPhone / iPod Touch -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-57x57@1x.png" width="57" height="57" />
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-57x57@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-72x72@1x.png" width="72" height="72" />
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-72x72@2x.png" width="144" height="144" />
        <!-- iPad Pro -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-167x167@1x.png" width="167" height="167" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-29x29@1x.png" width="29" height="29" />
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-29x29@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-Small-50x50@1x.png" width="50" height="50" />
        <icon src="icons/ios/AppIcon.appiconset/Icon-Small-50x50@2x.png" width="100" height="100" />
        <!-- iPad Pro -->
        <icon src="icons/ios/AppIcon.appiconset/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
    </platform>
    <platform name="android">
        <!--
            ldpi    : 36x36 px
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="icons/android/mipmap-ldpi/ic_launcher.png" density="ldpi" />
        <icon src="icons/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
        <icon src="icons/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
        <icon src="icons/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
        <icon src="icons/android/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
        <icon src="icons/android/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
    </platform>
</widget>
